    "version": "0.2.0",
    "configurations": [
        // Python: Current File
        // Debugs currently open python file
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },

        // Python: Step In Current File
        // Launches file then stops on entry to step through
        {
            "name": "Python: Step In Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "stopOnEntry": true
        }
    ]
}